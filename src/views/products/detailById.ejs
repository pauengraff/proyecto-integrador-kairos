<!doctype html>
<html lang="es">

<head>
  <%- include("../partials/head") %>
    <link rel="stylesheet" href="/css/styles-productDetail.css" />

    <title>Kairos</title>
</head>

<%- include("../partials/header") %>

  <body>
    <main>
      <section class="productDetail">
        <article class="productDetail-d">
          <img class="productPhoto" src="/images/products/<%= product.image %>" alt="Image" />
          <div class="productText">
            <img class="productLogo" src="/images/products/<%= product.logo %>" alt="Logo" />
            <h6 class="productNumber">SKU: <%= product.sku %>
            </h6>
            <h1 class="productName">
              <%= product.name %>
            </h1>
            <h1 class="productPrice">$<%= product.price %>
            </h1>
            <h5 class="productPricePay">Hasta <%= product.promotion %>!</h5>
            <h5 class="productPriceOff">
              <%= product.discount %> % OFF en 1 pago!

                <a href="/products/cart" class="buttonBuy">LO QUIERO</a>
                <a href="/products/edit/<%= product.id %>" class="buttonBuy">EDITAR</a>
                <a href="/products/add/" class="buttonBuy">AGREGAR PRODUCTO</a>
                <form action="/products/<%= product.id %>?_method=delete" method="POST">
                  <button type="submit" class="submit-button">ELIMINAR</button>
                </form>


            </h5>
          </div>

        </article>

        <article class="productDescription-d">
          <div class="description">
            <h4>Descripci√≥n</h4>
            <p class="textDescription">
              <%= product.description %>
            </p>
          </div>
          <div class="specifications">
            <h4>Especificaciones</h4>
            <p class="textDescription">
              <%= product.specs %>
            </p>
          </div>
        </article>
      </section>
    </main>

    <%- include("../partials/footer") %>
  </body>

</html>